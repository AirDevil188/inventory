extends layout 

block content

    if list_games.length > 0
        p #[strong Please, before deleting delete following games in genre: ]
            each game in list_games
                li !{game.title} 

    else
        p #[strong Are you sure that you want to delete this genre]

            form(method="POST")
                div.form-group
                    input.form-control(type= "hidden", name= "genre_id", id= "genre_id", value=genre.id )

                div.form-group
                    label(for="master_password").form-label #[strong Password: ]
                    input(type="password" id="master_password" name="master_password").form-control
                    
                button.btn.btn-primary(type="submit") Delete

