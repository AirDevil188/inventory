extends layout 

block content 

    h3 #[strong Delete GameInstance: !{gameinstance.id}]
    p #[strong] Are you sure that you want to delete this gameinstance? 

    form(method="POST")

        div.form-group
            label(for="master_password").label-form #[strong Password:]
            input(type="password", id="master_password", name="master_password").form-control
        div.form-group
            input.form-control(type="hidden", id="gameinstance_id", name= "gameinstance_id" value= gameinstance.id)

        button.btn.btn-primary(type="submit") Submit

    if errors 
        each error in errors 
            div.alert.alert-danger(role = "alert")
                p !{error.msg}