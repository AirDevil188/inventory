extends layout

block content
    
        form(method="POST")
            div.form-group
                label(for="platform_name").form-label #[strong Name: ]
                input(type="text" id="platform_name" name="platform_name" value=(undefined===platform ? "" : platform.name)).form-control

            if platform
                div.form-group
                label(for="master_password").form-label #[strong Password: ]
                input(type="password" id="master_password" name="master_password").form-control

            div.form-group
                    button.btn.btn-primary(type="submit") Submit